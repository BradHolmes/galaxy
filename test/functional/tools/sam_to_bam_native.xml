<tool id="sam_to_bam_native_conversion" name="Test sam to bam native conversion">
    <command><![CDATA[
        cat '$input1' > '$outfile1'
    ]]>
    </command>
    <inputs>
        <param name="input1" type="data" format="bam" label="Concatenate Dataset"/>
    </inputs>
    <outputs>
        <data name="out_file1" format="bam"/>
    </outputs>
    <tests>
        <test>
            <param name="input1" value="sam_with_header.sam" ftype="sam"/>
            <output name="outfile1" file="bam_native_from_sam.bam"/>
        </test>
    </tests>
    <help>
    </help>
</tool>
